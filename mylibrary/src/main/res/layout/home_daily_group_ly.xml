<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.meilishuo.mainpage.view.DailyListView
        android:id="@id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@color/transparent"
        android:dividerHeight="0.0dip"
        android:fadingEdgeLength="0.0dip"
        android:listSelector="@color/transparent"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <com.meilishuo.base.view.GradientRelativeLayout
        android:id="@id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@drawable/home_background_transparent"
        app:endColor="@color/white"
        app:startColor="@color/white">

        <com.meilishuo.base.view.GradientTextView
            android:id="@id/back"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ico_return_white"
            android:drawablePadding="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="@dimen/padding_big"
            android:textColor="@color/white"
            android:textSize="18.0sp"
            app:endColor="@color/grey_gradient_end"
            app:startColor="@color/white" />

        <com.meilishuo.base.view.GradientTextView
            android:id="@id/top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/transparent"
            android:textSize="18.0sp"
            app:endColor="@color/grey_gradient_end"
            app:startColor="@color/white" />
    </com.meilishuo.base.view.GradientRelativeLayout>

    <ImageView
        android:id="@id/make_daily"
        android:layout_width="55.0dip"
        android:layout_height="55.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20.0dip"
        android:src="@drawable/home_capture_daily" />
</RelativeLayout>